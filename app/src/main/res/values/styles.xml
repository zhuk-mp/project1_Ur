<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Primary" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rhd_regular</item>
    </style>

    <style name="Primary.AllCaps">
        <item name="textAllCaps">true</item>
    </style>

    <style name="Primary.AllCaps.OverLine">
        <item name="android:textSize">10sp</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">1.5</item>
    </style>

    <style name="Primary.AllCaps.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
        <item name="android:letterSpacing">0.75</item>
    </style>

    <style name="Primary.Caption">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">16sp</item>
        <item name="fontWeight">500</item>
<!--        <item name="android:letterSpacing">0.02</item>-->
    </style>

    <style name="Primary.Body2">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="Primary.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontWeight">500</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Primary.Body1">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
<!--        <item name="android:letterSpacing">0.04</item>-->
    </style>

    <style name="Primary.Headline">
        <item name="lineHeight">28sp</item>
        <item name="fontWeight">500</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Primary.Headline.h6">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Primary.Headline.h5">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Primary.Headline.h4">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="Primary.Headline.h3">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Primary.Headline.h2">
        <item name="android:textSize">60sp</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="Primary.Headline.h1">
        <item name="android:textSize">96sp</item>
        <item name="fontWeight">300</item>
        <item name="android:letterSpacing">-1.5</item>
    </style>


</resources>